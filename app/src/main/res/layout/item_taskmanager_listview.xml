<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_taskmanager"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bt_selector_blue">

    <ImageView
        android:id="@+id/iv_icon_taskmanager"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_apkname_taskmanager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_icon_taskmanager"
        android:text="手机卫士"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_apkmem_taskmanager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_apkname_taskmanager"
        android:layout_below="@+id/tv_apkname_taskmanager"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_icon_taskmanager"
        android:text="手机卫士"
        android:textColor="@android:color/black"
        android:textSize="10sp" />

    <CheckBox
        android:id="@+id/cb_sel_taskmanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black" />
</RelativeLayout>